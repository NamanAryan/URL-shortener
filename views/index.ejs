<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style.css">
    <title>URL-Shortener</title>
</head>

<body>
    <h1>URL-Shortener</h1>
    
    <form method="post" action="/url">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Enter your URL</label>
          <input type="text" class="form-control" id="exampleInputEmail1" placeholder="https://example.com" name = "url">
        </div> 
        <button type="submit" class="btn btn-primary" action = "post" >Generate Short URL</button>
    </form>

    <% if (locals.id)  { %>
      URL Generated: <a href = "http://localhost:8001/<%= id %>" target="_blank">http://localhost:8001/<%= id %> </a>
    <% } %>
    <% if(urls && urls.length > 0){ %>
      <div class="table">
        <table>
          <thead>
            <tr>
              <th>S.No.</th>
              <th>Short URL</th>
              <th>Redirect</th>
              <th>Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index) => { %>
              <tr>
                <td> <%= index + 1 %> </td>
                <td> <a href = "http://localhost:8001/<%= url.shortId %>" target="_blank">http://localhost:8001/<%= url.shortId %> </a> </td>
                <td> <a href = "<%= url.redirectURL %>" target="_blank"><%= url.redirectURL %> </a> </td>
                <td> <%= url.visitHistory.length %> </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %> 
  
</body>
</html>